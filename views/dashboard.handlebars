<div class="container">
  <div class="row">
    <div class="col-8 text-center">
      <ul class="posts-list">
        {{#each posts as |post|}}
        <li>{{> blogpost}}</li>
        {{/each}}
      </ul>
    </div>
    <div class="col-3 text-center">
      <h2>Add a new post</h2>
      <form class="form new-post-form">
        <div class="form-group">
          <textarea class="form-input" id="title-desc" name="title-desc" placeholder=" Title"></textarea>
          <textarea class="form-input" id="content-desc" name="content-desc" placeholder=" Content"></textarea>
        </div>
        <div class="form-group">
          <button type="submit">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="/js/post.js"></script>